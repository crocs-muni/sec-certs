{% extends "common/base.html.jinja2" %}

{% block content %}
    <main style="min-height: 60vh">
        <div class="col-10 mx-auto p-3 py-md-5">
            <h1>Manage notification subscriptions</h1>
            <p class="lead">You can manage your notification subscriptions for your user account below.</p>
            <form action="{{ url_for("notify.manage") }}" method="post">
                {{ form.hidden_tag() }}
                <div>
                    <h2>Existing certificates</h2>
                    {% if form.changes.entries %}
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Subscribed</th>
                                <th>Certificate</th>
                                <th>Notification type</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for sub_form in form.changes.entries %}
                                <tr>
                                    {{ sub_form.certificate_type() }}
                                    {{ sub_form.certificate_hashid() }}
                                    <td>
                                        <div class="form-switch">
                                            {{ sub_form.subscribe(class_="form-check-input") }}
                                        </div>
                                    </td>
                                    <td>
                                        {{ sub_form.label }}
                                    </td>
                                    <td>
                                        {{ sub_form.updates(class_="form-select") }}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <p>You have no certificate change subscriptions. Add them on the certificate page for them to
                            show up here.</p>
                    {% endif %}
                    <h2>New certificates</h2>
                    {% if form.new.entries %}
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Subscribed</th>
                                <th>Scheme</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for sub_form in form.new.entries %}
                                <tr>
                                    {{ sub_form.which(class_="d-none") }}
                                    <td>
                                        <div class="form-switch">
                                            {{ sub_form.subscribe(class_="form-check-input") }}
                                        </div>
                                    </td>
                                    <td>
                                        {{ sub_form.label }}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <p>You have no new certificate subscription.</p>
                    {% endif %}
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </main>
{% endblock %}