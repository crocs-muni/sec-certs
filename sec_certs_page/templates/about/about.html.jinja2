    <style>
        .photo-wrap {
            position: relative;
            display: inline-block;
            max-width: 100%;
        }

        .photo-wrap img {
            display: block;
            width: 100%;
            height: auto;
        }

        /* hotspot wrapper — positioned by percentages so it scales with image */
        .hotspot {
            position: absolute;
            transform: translate(-50%, -50%); /* centers the marker on the coord */
            cursor: pointer;
            outline: none;
        }

        /* visible marker (small circle) */
        .hotspot .marker {
            width: 3.5rem; /* size in relative units; change as needed */
            height: 3.5rem;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0);
            border: 0;
            box-shadow: 0 0 0 0 rgba(0, 123, 255, 0); /* used for animated highlight */
            transition: box-shadow .18s ease, transform .12s ease, background .12s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            pointer-events: none; /* allow the anchor to receive pointer events */
        }

        /* optional small inner dot */
        .hotspot .dot {
            width: 1.8rem;
            height: 1.8rem;
            text-align: center;
            vertical-align: middle;
            color: rgba(255, 255, 255, 0.8);
            background: rgba(255, 255, 255, 0.4);
            border-radius: 50%;
            /*box-shadow: 0 0 6px rgba(0, 123, 255, 0.5);*/
            pointer-events: none;
        }

        /* hover/focus highlight */
        .hotspot:hover .marker,
        .hotspot:focus .marker,
        .hotspot:active .marker {
            background: rgba(0, 123, 255, 0.12);
            box-shadow: 0 0 0 6px rgba(0, 123, 255, 0.12);
            /*transform: scale(1.06);*/
        }

        /* make hotspot focusable with keyboard */
        .hotspot:focus {
            outline: none;
        }

    </style>
{% endblock %}

{% macro render_person(name, description, duration) %}
    <div class="card mb-3 me-lg-3">
        <div class="row g-0">
            <div class="col-md-2 d-none d-md-flex align-items-center justify-content-center border-end">
                <i class="fas fa-user-circle fa-2xl"></i>
            </div>
            <div class="col-md-8">
                <div class="card-body py-2">
                    <h5 class="card-title">{{ name }}</h5>
                    <p class="card-text mb-1">{{ description|safe }}</p>
                    <p class="card-text"><small class="text-body-secondary">{{ duration }}</small></p>
                </div>
            </div>
        </div>
    </div>
{% endmacro %}

{% macro render_student(name, description, duration) %}
    <div class="border rounded p-2 my-2 me-lg-3">
        <b>{{ name }}</b><br/>
        {{ description|safe }}, <span class="text-muted">{{ duration }}</span>
    </div>
{% endmacro %}

